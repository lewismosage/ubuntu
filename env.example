# Ubuntu Afya Environment Variables
# Copy this file to .env.local and fill in your actual values

# Payment Processing
# TODO: Add your Stripe publishable key
NEXT_PUBLIC_STRIPE_KEY=pk_test_your_stripe_key_here

# Mobile Money Integration
# TODO: Add your mobile money API key
MOBILE_MONEY_API_KEY=your_mobile_money_key_here

# Email Service (for contact forms and notifications)
# TODO: Add your email service configuration
EMAIL_SERVICE_API_KEY=your_email_service_key_here
EMAIL_FROM_ADDRESS=noreply@ubuntuafya.org

# Analytics
# TODO: Add your analytics tracking IDs
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FB_PIXEL_ID=your_facebook_pixel_id

# Social Media
# TODO: Add your social media URLs
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/ubuntuafya
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/ubuntuafya
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/ubuntuafya
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/ubuntuafya

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=info@ubuntuafya.org
NEXT_PUBLIC_CONTACT_PHONE=+254700000000
NEXT_PUBLIC_CONTACT_ADDRESS=Nairobi, Kenya

# Development
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
